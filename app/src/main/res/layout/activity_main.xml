<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050505">

    <!-- SYSTEM STATUS -->
    <TextView
        android:id="@+id/statusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JARVIS â€¢ ONLINE"
        android:textColor="#CCFF00"
        android:textSize="13sp"
        android:letterSpacing="0.15"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"/>

    <!-- AI ORB CONTAINER -->
    <FrameLayout
        android:id="@+id/orbContainer"
        android:layout_width="260dp"
        android:layout_height="260dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- GLOW BACK -->
        <ImageView
            android:id="@+id/orbGlow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_orb_glow"
            android:alpha="0.7"/>

        <!-- MAIN ORB -->
        <ImageView
            android:id="@+id/orbCore"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/bg_orb_core"/>
    </FrameLayout>

    <!-- JARVIS RESPONSE / PROMPT -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="How may I help you today?"
        android:textColor="#EDEDED"
        android:textSize="18sp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/orbContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- MIC BUTTON -->
    <ImageButton
        android:id="@+id/btnMic"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="@drawable/bg_mic_neon"
        android:src="@drawable/ic_mic"
        android:tint="#050505"
        android:contentDescription="Jarvis Mic"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="42dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>